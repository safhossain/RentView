<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>ManagerAccessFilter</filter-name>
        <filter-class>com.ryerson.rentview.GUI.ManagerAccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ManagerAccessFilter</filter-name>
        <url-pattern>/manager.jsp</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.ryerson.rentview.GUI.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerUpdateMoviesServlet</servlet-name>
        <servlet-class>com.ryerson.rentview.GUI.ManagerUpdateMoviesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserManagementServlet</servlet-name>
        <servlet-class>com.ryerson.rentview.GUI.UserManagementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
        <url-pattern>/Login</url-pattern>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerUpdateMoviesServlet</servlet-name>
        <url-pattern>/ManagerUpdateMoviesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserManagementServlet</servlet-name>
        <url-pattern>/UserManagementServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
